<!DOCTYPE html>
<html lang="zxx">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div id="wrapper">
      <%- include('../partials/header', {style: "transparent", status: "logout"}); -%>
      <!-- content begin -->
      <div class="no-bottom no-top" id="content">
        <div id="top"></div>

        <!-- section begin -->
        <section
          id="subheader"
          class="text-light"
          data-bgimage="url(images/background/subheader.jpg) top"
        >
          <div class="center-y relative text-center">
            <div class="container">
              <div class="row">
                <div class="col-md-12 text-center">
                  <h1>Create</h1>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
          </div>
        </section>
        <!-- section close -->

        <!-- section begin -->
        <section aria-label="section">
          <div class="container">
            <div class="row wow fadeIn">
              <div class="col-lg-7 offset-lg-1">
                <form
                  id="form-create-item"
                  class="form-border"
                  method="post"
                  action="/createProject"
                  enctype="multipart/form-data"
                >
                  <div class="field-set">
                    <h5>Upload file</h5>

                    <div class="d-create-file">
                      <p id="file_name">
                        PNG, JPG, GIF, WEBP or MP4. Max 200mb.
                      </p>
                      <input
                        type="button"
                        id="get_file"
                        class="btn-main"
                        value="Browse"
                      />
                      <input type="file" id="upload_file" name="image" />
                    </div>

                    <div class="spacer-single"></div>

                    <h5>Select method</h5>
                    <div class="de_tab tab_methods">
                      <ul class="de_nav">
                        <li class="active">
                          <span><i class="fa fa-code"></i>Live</span>
                        </li>
                        <li>
                          <span
                            ><i class="fa fa-hourglass-1"></i>Countdown</span
                          >
                        </li>
                      </ul>

                      <h5>Max Contributors</h5>
                      <input
                        type="text"
                        name="maxContributors"
                        class="form-control"
                        placeholder="Enter the maximum number of contributors(eg. 50)"
                      />
                      <div class="de_tab_content">
                        <div id="tab_opt_1"></div>

                        <div id="tab_opt_2">
                          <div class="row">
                            <div class="col-md-6">
                              <h5>Starting date</h5>
                              <input
                                type="date"
                                name="proj_starting_date"
                                class="form-control"
                                min="1997-01-01"
                              />
                            </div>
                            <div class="spacer-single"></div>
                          </div>
                        </div>
                      </div>
                    </div>

                    <h5>Title</h5>
                    <input
                      type="text"
                      name="proj_title"
                      class="form-control"
                      placeholder="e.g. To-Do App"
                    />

                    <div class="spacer-10"></div>

                    <h5>Description</h5>
                    <textarea
                      data-autoresize
                      name="proj_desc"
                      class="form-control"
                      placeholder="e.g. 'An app to store to-do lists'"
                    ></textarea>

                    <div class="spacer-10"></div>

                    <div class="item_filter_group">
                      <h4>Technologies Used</h4>
                      <div class="de_form">
                        <div class="de_checkbox">
                          <input
                            id="check_cat_3"
                            name="techUsed"
                            type="checkbox"
                            value="cpp"
                          />
                          <label for="check_cat_3">C/C++</label>
                        </div>

                        <div class="de_checkbox">
                          <input
                            id="check_cat_4"
                            name="techUsed"
                            type="checkbox"
                            value="nodejs"
                          />
                          <label for="check_cat_4">NodeJs</label>
                        </div>

                        <div class="de_checkbox">
                          <input
                            id="check_cat_5"
                            name="techUsed"
                            type="checkbox"
                            value="react"
                          />
                          <label for="check_cat_5">React</label>
                        </div>

                        <div class="de_checkbox">
                          <input
                            id="check_cat_6"
                            name="techUsed"
                            type="checkbox"
                            value="kotlin"
                          />
                          <label for="check_cat_6">Kotlin</label>
                        </div>

                        <div class="de_checkbox">
                          <input
                            id="check_cat_7"
                            name="techUsed"
                            type="checkbox"
                            value="rust"
                          />
                          <label for="check_cat_7">Rust</label>
                        </div>

                        <div class="de_checkbox">
                          <input
                            id="check_cat_8"
                            name="techUsed"
                            type="checkbox"
                            value="angular"
                          />
                          <label for="check_cat_8">Angular</label>
                        </div>
                      </div>
                    </div>

                    <div class="spacer-single"></div>

                    <input
                      type="submit"
                      id="submit"
                      class="btn-main"
                      value="Create Item"
                    />
                  </div>
                </form>
              </div>

              <div class="col-lg-3 col-sm-6 col-xs-12">
                <h5>Example item</h5>
                <div class="nft__item">
                  <div
                    class="de_countdown"
                    data-year="2021"
                    data-month="9"
                    data-day="16"
                    data-hour="8"
                  ></div>
                  <div class="author_list_pp">
                    <a href="#">
                      <img
                        class="lazy"
                        src="images/author/author-1.jpg"
                        alt=""
                      />
                      <i class="fa fa-check"></i>
                    </a>
                  </div>
                  <div class="nft__item_wrap">
                    <a href="#">
                      <img
                        src="images/todo.png"
                        id="get_file_2"
                        class="lazy nft__item_preview"
                        alt=""
                      />
                    </a>
                  </div>
                  <div class="nft__item_info">
                    <a href="#">
                      <h4>To-Do App</h4>
                    </a>
                    <div class="nft__item_price">React, NodeJs</div>
                    <div class="nft__item_action">
                      <a href="#">Learn More</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <!-- content close -->

      <a href="#" id="back-to-top"></a>

      <%- include('../partials/footer'); %>
    </div>
    <%- include('../partials/jsFiles'); %>
  </body>
</html>
